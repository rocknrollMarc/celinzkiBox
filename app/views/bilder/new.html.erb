<h1>News Wunder</h1>

<%= form_for @bilder do |f|  %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: 'form-control', required: true  %>
  </div>

  <div class="form-group">
    <%= f.label :image  %>
    <%= f.file_field :image, required: true  %>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary btn-lg'  %>
<% end %>
